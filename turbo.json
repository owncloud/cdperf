{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"lint": {
      "cache": false
    },
		"lint:fix": {
      "cache": false
    },
		"build": {
      "outputMode": "new-only",
      "dependsOn": ["^build"],
			"outputs": [
				"dist/**",
				"lib/**",
				"artifacts/**"
			],
      "inputs": [
        "./*.json",
        "./*.mjs",
        "./src/**/*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
	}
}
